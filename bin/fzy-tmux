#!/bin/bash

## fzy-tmux
## launches fzy as a tmux popup window

set -e

stdin=$(cat)
opts="$@"

if [[ -z "$TMUX" ]]; then
    echo "$stdin" | fzy --lines=20 --prompt="❯" $opts
    exit $?
fi

fzy="echo \"$stdin\" | fzy --lines=20 --prompt=\"❯\" $opts"

result=$(mktemp "/tmp/${0##*/}.tmp.XXXXXX")

tmux popup -E -d $PWD "$fzy > $result" > /dev/null 2>&1

cat $result

rm -rf $result
