[include]
    path = ~/.gitconfig.local

[push]
    default = simple

[color]
    ui = auto
    interactive = auto

[diff]
    tool = vimdiff
    compactionHeuristic = true

[difftool]
    prompt = false

[merge]
    tool = vimdiff
;    ff = false

[mergetool]
    prompt = false

[github]
    user = rinx

[core]
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes_global
    editor = nvim -u ~/.dotfiles/init.vim
    pager = delta

[interactive]
    diffFilter = delta --color-only

[alias]
    this  = !git init && git add . && git commit --signoff -m \"first commit\"

    st    = status -s -b

    l     = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
    ll    = log --graph --stat --abbrev-commit

    ad    = add

    ci    = commit --signoff
    cm    = commit --signoff -m
    cv    = commit --signoff -v
    ca    = commit --signoff --amend --no-edit
    cae   = commit --signoff --amend

    ps    = push
    psa   = push --all

    pl    = pull

    co    = checkout

    br    = branch

    dm    = diff master
    dw    = diff --color-words
    dc    = diff --staged

    sb    = show-branch

    mg    = merge --signoff
    mgn   = merge --no-commit

    sq    = squash

[url "https://"]
    insteadOf = git://

[credential]
    helper = store --file ~/.git-credentials
    helper = cache --timeout=360000

[pull]
    ff = only

[submodule]
    recurse = true

[ghq]
    root = ~/local/src

[rerere]
	enabled = true

[fetch]
	prune = true

[init]
	defaultBranch = main
