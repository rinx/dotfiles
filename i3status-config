# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "volume master"
order += "disk /"
order += "wireless _first_"
order += "load"
order += "cpu_usage"
order += "battery all"
order += "tztime local"

# order += "ipv6"
# order += "ethernet _first_"

wireless _first_ {
        format_up = " %quality %essid %bitrate %ip"
        format_down = "睊 down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = " %ip (%speed)"
        format_down = " down"
}

battery all {
        format = "%status %percentage"
        format_down = ""
        status_chr = ""
        status_bat = ""
        status_unk = ""
        status_full = ""
        low_threshold = 10
        threshold_type = "percentage"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = " %1min, %5min"
}

disk "/" {
        format = " %avail / %total"
}

volume master {
        format = "墳 %volume "
        format_muted = "奄 %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_usage {
        format = "龍 %usage "
        max_threshold = 80
        degraded_threshold = 25
}
