{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "clojure": {
      "command": "clojure-lsp",
      "filetypes": ["clojure"],
      "rootPatterns": ["project.clj"],
      "additionalSchemes": ["jar", "zipfile"],
      "trace.server": "verbose",
      "initializationOptions": {
        "ignore-classpath-directories": true
      }
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": [
        "dockerfile"
      ],
      "args": [
        "--stdio"
      ]
    },
    "fortran": {
      "command": "fortls",
      "filetypes": ["fortran"],
      "rootPatterns": [".fortls", ".git/"]
    },
    "kotlin": {
      "command": "kotlin-language-server",
      "filetypes": ["kotlin"]
    }
  },
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },
  "suggest.minTriggerInputLength": 2,
  "list.insertMappings": {
    "<C-n>": "normal:j",
    "<C-p>": "normal:k"
  },
  "pairs.enableBackspace": true,
  "pairs.enableCharacters": ["(", "[", "{", "<", "'", "\"", "`"],
  "snippets.ultisnips.enable": true,
  "snippets.ultisnips.directories": [
    "UltiSnips"
  ],
  "git.branchCharacter": "",
  "git.addedSign.text": "+",
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.text": "~",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.text": "_",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.text": "‾",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.text": "≃",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "javascript", "graphql"],
  "codeLens.enable": true,
  "signature.enable":true,
  "go.enable": true,
  "go.goplsPath": "/usr/local/go/bin/gopls",
  "go.goplsOptions": {
    "completeUnimported": true,
    "completionDocumentation": false,
    "deepCompletion": false,
    "hoverKind": "FullDocumentation",
    "matcher": "Fuzzy",
    "staticcheck": false,
    "usePlaceholders": true
  },
  "go.tags": {
    "option": "",
    "tags": "json,yaml",
    "transform": "snakecase"
  },
  "go.tests": {
    "generateFlags": []
  },
  "rust.unstable_features": true,
  "rust-analyzer.updates.prompt": false,
  "rust-analyzer.diagnostics.enable": true,
  "rust-analyzer.diagnostics.enableExperimental": true,
  "rust-analyzer.inlayHints.chainingHints": true,
  "rust-analyzer.cargo.allFeatures": true,
  "rust-analyzer.completion.addCallParenthesis": true,
  "rust-analyzer.completion.addCallArgumentSnippets": true,
  "rust-analyzer.completion.postfix.enable": true,
  "rust-analyzer.lens.enable": true,
  "rust-analyzer.lens.run": true,
  "rust-analyzer.lens.implementations": true,
  "rust-analyzer.lens.methodReferences": true,
  "rust-analyzer.hoverActions.enable":true,
  "rust-analyzer.hoverActions.linksInHover": true,
  "coc.source.iced.enable": true
}
